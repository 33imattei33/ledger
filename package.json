{
  "name": "@decentralchain/ledger",
  "version": "4.0.1",
  "description": "DecentralChain Ledger hardware wallet integration library for browser",
  "main": "lib/DCCLedger.js",
  "types": "lib/DCCLedger.d.ts",
  "license": "Apache-2.0",
  "author": {
    "name": "DecentralChain",
    "email": "info@decentralchain.io",
    "url": "https://decentralchain.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Decentral-America/ledger.git"
  },
  "scripts": {
    "build": "tsc && node_modules/.bin/browserify lib/DCCLedger.js -s DCCLedgerJs -u @ledgerhq/logs -u @ledgerhq/hw-transport-u2f -o dist/dcc-ledger.js && npm run build_transport",
    "build_transport": "node_modules/.bin/browserify ./node_modules/@ledgerhq/hw-transport-u2f/lib/TransportU2F.js -s TransportU2F -o dist/transport-u2f.js",
    "prepare": "npm run build",
    "build_ledger_monitor": "rimraf dist && npm run build && node_modules/.bin/browserify ledgerTest/index.js -o dist/ledgerTest.js -t [ babelify ] -t"
  },
  "dependencies": {
    "@ledgerhq/hw-transport-u2f": "^5.34.0",
    "@ledgerhq/hw-transport-webusb": "^5.34.1",
    "@ledgerhq/logs": "^5.19.1",
    "@decentralchain/ts-lib-crypto": "^1.4.3",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.54",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",
    "@babel/runtime": "^7.0.0-beta.54",
    "babel-runtime": "^6.26.0",
    "babelify": "^9.0.0",
    "browserify": "^16.2.3",
    "browserify-global-shim": "^1.0.3",
    "typescript": "^3.9.6",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  }
}
